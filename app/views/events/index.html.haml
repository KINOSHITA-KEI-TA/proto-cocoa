%body.Main-index
%h1 CoCoA

#calendar

%h2.List スケジュールリスト
%table.List-title
  %thead
    %tr
      %th 【タイトル】
      %th 【ないよう】
      %th 【開始日程】
      %th 【終了日程】
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.body
        %td= event.start_date
        %td= event.end_date
        %td= link_to 'くわしく', event
        %td= link_to 'へんこう', edit_event_path(event)
        %td= link_to 'さくじょ', event, method: :delete, data: { confirm: '削除（さくじょ）してよろしいですか？' }

%br
.New-box
  .New-event
    = link_to 'スケジュールの追加（ついか）', new_event_path, class: 'Button-out'
  .Out-event
    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'Button-out'
.Color-select
  .row.pt20
    .col-xs-12
      .form-group.radio-wrap.text-center
        %label.label-radio
          %input#green{name: "radio", type: "radio"}/
          %span.lever グリーン
        %label.label-radio
          %input#red{name: "radio", type: "radio"}/
          %span.lever レッド
        %label.label-radio
          %input#black{name: "radio", type: "radio"}/
          %span.lever ブラック
