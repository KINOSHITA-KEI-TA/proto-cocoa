%header.Header-class
  = image_tag '/assets/CoCoA-H.jpg', alt: '説明画像', height: '250', width: '100%', class: 'image-first' 
%body.Main-index
%h1 

#calendar

%h2.List キミのスケジュール
%table.List-title
  %thead
    %tr
      %th 【タイトル】
      %th 【ないよう】
      %th 【はじまる日】
      %th 【おわる日】
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.body
        %td= event.start_date
        %td= event.end_date
        %td= link_to 'くわしく', event
        %td= link_to 'へんこう', edit_event_path(event)
        %td= link_to 'さくじょ', event, method: :delete, data: { confirm: '削除（さくじょ）してよろしいですか？' }

%br
.New-box
  .New-event
    = link_to 'スケジュールの追加（ついか）', new_event_path, class: 'Button-out'
  .Out-event
    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'Button-out'
.Color-select
  .row.pt20
    .col-xs-12
      -# = form_with(model:[@color],do |form|
      .form-group.radio-wrap.text-center
        %label.label-radio
          %input#green{name: "radio", type: "radio"}/
          %span.lever グリーン
        %label.label-radio
          %input#red{name: "radio", type: "radio"}/
          %span.lever レッド
        %label.label-radio
          %input#black{name: "radio", type: "radio"}/
          %span.lever ブラック
        = form.submit "変更",class:"color-btn"
